<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="upgradekaro.techinewsworld.MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        tools:openDrawer="start"
        android:id="@+id/drawer"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/activity_main"
            android:layout_height="match_parent">
            <include layout="@layout/maintool"></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/activitymain_container"
                android:layout_below="@+id/maintoolbar"
                android:background="@mipmap/paper"
                android:layout_height="match_parent">
                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:background="@color/main"
                    app:tabMode="scrollable"
                    app:tabTextColor="#fff"
                    android:id="@+id/mainlay_tablayout"
                    android:layout_height="40dp">
                </android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                    android:layout_below="@+id/mainlay_tablayout"
                    android:id="@+id/mainlay_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v4.view.ViewPager>
            </RelativeLayout>
        </RelativeLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="start">
            <include layout="@layout/sidemenu"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
