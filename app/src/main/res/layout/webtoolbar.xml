<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main"
    android:id="@+id/toolbar_webview"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/arrow_left"
        android:id="@+id/webfragtoolbar_imgbackarrow" />

    <TextView
        android:text="The Hindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/webfragtoolbar_imgbackarrow"
        android:layout_toEndOf="@+id/webfragtoolbar_imgbackarrow"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="50dp"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/webfragtoolbar_imgshare"
        app:srcCompat="@drawable/heart"
        android:id="@+id/webfragtoolbar_imgfav" />

    <ImageView
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:srcCompat="@drawable/share_variant"
        android:id="@+id/webfragtoolbar_imgshare" />
</RelativeLayout>